<%- include('../partials/header') %>
<h2>Edit Supplier</h2>
<form method="POST" action="/suppliers/<%= supplier._id %>?_method=PUT">
  <div class="mb-3">
    <label class="form-label">Name</label>
    <input class="form-control" name="name" value="<%= supplier.name %>" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Address</label>
    <input class="form-control" name="address" value="<%= supplier.address %>">
  </div>
  <div class="mb-3">
    <label class="form-label">Phone</label>
    <input class="form-control" name="phone" value="<%= supplier.phone %>">
  </div>
  <button class="btn btn-primary">Update</button>
  <a href="/suppliers" class="btn btn-secondary">Cancel</a>
</form>
<%- include('../partials/footer') %>
