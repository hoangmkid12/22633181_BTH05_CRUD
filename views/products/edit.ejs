<%- include('../partials/header') %>
<h2>Edit Product</h2>
<form method="POST" action="/products/<%= product._id %>?_method=PUT">
  <div class="mb-3">
    <label class="form-label">Name</label>
    <input class="form-control" name="name" value="<%= product.name %>" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Price</label>
    <input class="form-control" type="number" step="0.01" name="price" value="<%= product.price %>" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Quantity</label>
    <input class="form-control" type="number" name="quantity" value="<%= product.quantity %>" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Supplier</label>
    <select class="form-select" name="supplierId" required>
      <% suppliers.forEach(s => { %>
        <option value="<%= s._id %>" <%= String(s._id)===String(product.supplierId)?'selected':'' %>><%= s.name %></option>
      <% }) %>
    </select>
  </div>
  <button class="btn btn-primary">Update</button>
  <a href="/products" class="btn btn-secondary">Cancel</a>
</form>
<%- include('../partials/footer') %>
