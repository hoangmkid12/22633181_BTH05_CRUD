<%- include('../partials/header') %>
<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Products</h2>
  <a class="btn btn-primary" href="/products/new">+ New</a>
</div>
<table class="table table-striped">
  <thead><tr><th>Name</th><th>Price</th><th>Qty</th><th>Supplier</th><th style="width:160px"></th></tr></thead>
  <tbody>
  <% products.forEach(p => { %>
    <tr>
      <td><%= p.name %></td>
      <td>$<%= p.price %></td>
      <td><%= p.quantity %></td>
      <td><%= p.supplierId?.name %></td>
      <td>
        <a class="btn btn-sm btn-warning" href="/products/<%= p._id %>/edit">Edit</a>
        <form method="POST" action="/products/<%= p._id %>?_method=DELETE" class="d-inline">
          <button class="btn btn-sm btn-danger" onclick="return confirm('Delete this product?')">Delete</button>
        </form>
      </td>
    </tr>
  <% }) %>
  </tbody>
</table>
<%- include('../partials/footer') %>
